<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Documento Base QWeb - Documentos del Sistema -->
    <template id="ds_document_base">
        <t t-call="web.external_layout">
            <div class="page">

                <!-- HEADER -->
                <div class="row mb-3">
                    <div class="col-6">
                        <img t-if="o.company_id.logo"
                             t-att-src="'/web/image/res.company/%s/logo' % o.company_id.id"
                             style="max-height:90px;"/>
                    </div>
                    <div class="col-6 text-right">
                        <h3 t-esc="o.company_id.name"/>
                        <div t-esc="o.company_id.street"/>
                        <div t-esc="o.company_id.city"/>
                        <div t-esc="o.company_id.phone"/>
                    </div>
                </div>

                <!-- CUERPO DEL DOCUMENTO -->
                <!-- AQUÃ se inserta la tabla, totales, etc. -->
                <t t-call="0"/>

                <!-- PIE COMPLETO EDITABLE (ADMIN) -->
                <div style="margin-top:40px; border-top:1px solid #ccc; padding-top:10px;">
                    <div t-raw="o.ds_footer_html()"/>
                </div>

            </div>
        </t>
    </template>

</odoo>
